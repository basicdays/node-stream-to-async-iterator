{
    "name": "stream-to-async-iterator",
    "version": "1.0.0",
    "description": "ES async interator wrapper for node streams",
    "homepage": "https://github.com/basicdays/node-stream-to-async-iterator#readme",
    "bugs": {
        "url": "https://github.com/basicdays/node-stream-to-async-iterator/issues"
    },
    "license": "MIT",
    "author": "BasicDays <info@basicdays.com> (https://www.basicdays.com)",
    "files": [
        "lib/**/*",
        "!lib/**/*.test.js",
        "!lib/test/**/*"
    ],
    "main": "lib/stream-to-async-iterator.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/basicdays/node-stream-to-async-iterator.git"
    },
    "keywords": [
        "node",
        "stream",
        "async-iterator",
        "promise",
        "esnext"
    ],
    "scripts": {
        "build": "run-p 'build:*'",
        "build:babel": "babel src --out-dir lib --source-maps --copy-files --extensions '.ts'",
        "build:tsc": "tsc --emitDeclarationOnly",
        "clean": "rm -rf lib",
        "cover": "BABEL_ENV=cover nyc mocha --config ./.mocharc.cover.json",
        "lint": "eslint .",
        "test": "mocha",
        "typecheck": "tsc --noEmit",
        "watch": "run-p 'watch:*'",
        "watch:babel": "npm run build:babel -- --watch",
        "watch:tsc": "npm run build:tsc -- --watch --preserveWatchOutput"
    },
    "dependencies": {
        "@babel/runtime": "^7.17.7",
        "core-js-pure": "^3.21.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.7",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/register": "^7.17.7",
        "@types/node": "^17.0.21",
        "babel-eslint": "^8.2.3",
        "babel-plugin-istanbul": "^6.1.1",
        "babel-plugin-polyfill-corejs3": "^0.5.2",
        "chai": "^4.3.6",
        "eslint": "^8.11.0",
        "mocha": "^9.2.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "prettier": "^2.5.1",
        "source-map-support": "^0.5.21",
        "typescript": "^4.6.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": 12
                    }
                }
            ],
            "@babel/preset-typescript"
        ],
        "plugins": [
            [
                "@babel/plugin-transform-runtime",
                {
                    "version": "7.17"
                }
            ],
            [
                "babel-plugin-polyfill-corejs3",
                {
                    "method": "usage-pure",
                    "version": "3.21"
                }
            ]
        ],
        "env": {
            "cover": {
                "plugins": [
                    "babel-plugin-istanbul"
                ]
            }
        }
    },
    "browserslist": [
        "node 12"
    ],
    "nyc": {
        "require": [
            "@babel/register"
        ],
        "sourceMap": false,
        "instrument": false
    }
}
